{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    // "declarationDir": "types",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "./lib",
    "sourceMap": true,
    "jsx": "react-jsx",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}